{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C/C++: build active file",
            "type": "shell",
            "command": "clang",   // or "gcc" if you installed it via Homebrew
            "args": [
                "-g",                   // debug symbols
                "${file}",              // input source file
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}" // output executable
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Task to build the active C file"
        }
    ]
}
